<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/zapis"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="30dp"
		android:gravity="right"
		android:paddingRight="10dp"/>

	<TextView
		android:id="@+id/number"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="30dp"
		android:gravity="right"
		android:paddingRight="10dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<Button
			android:id="@+id/delete_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_margin="10dp"
			android:textSize="20dp"
			android:background="@drawable/button_back"
			app:backgroundTint="@null"
			android:textColor="@color/red"
			android:text="C"/>

		<Button
			android:id="@+id/jaksha"
			style="@style/button_symbols_land"
			android:text="()"/>

		<Button
			android:id="@+id/prosent"
			style="@style/button_symbols_land"
			android:text="%" />

		<Button
			android:id="@+id/bolu"
			style="@style/button_symbols_land"
			android:text="/"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<Button
			android:id="@+id/seven"
			style="@style/button_numbers_land"
			android:text="7"/>

		<Button
			android:id="@+id/eight"
			style="@style/button_numbers_land"
			android:text="8"/>

		<Button
			android:id="@+id/nine"
			style="@style/button_numbers_land"
			android:text="9"/>

		<Button
			android:id="@+id/kobeitu"
			style="@style/button_symbols_land"
			android:text="*"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<Button
			android:id="@+id/four"
			style="@style/button_numbers_land"
			android:text="4"/>

		<Button
			android:id="@+id/five"
			style="@style/button_numbers_land"
			android:text="5"/>

		<Button
			android:id="@+id/six"
			style="@style/button_numbers_land"
			android:text="6"/>

		<Button
			android:id="@+id/alu"
			style="@style/button_symbols_land"
			android:text="-"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<Button
			android:id="@+id/one"
			style="@style/button_numbers_land"
			android:text="1"/>

		<Button
			android:id="@+id/two"
			style="@style/button_numbers_land"
			android:text="2"/>

		<Button
			android:id="@+id/three"
			style="@style/button_numbers_land"
			android:text="3"/>

		<Button
			android:id="@+id/kosu"
			style="@style/button_symbols_land"
			android:text="+"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1">

		<Button
			android:id="@+id/PlusMinus"
			style="@style/button_numbers_land"
			android:text="+/-"/>

		<Button
			android:id="@+id/zero"
			style="@style/button_numbers_land"
			android:text="0"/>

		<Button
			android:id="@+id/dote"
			style="@style/button_numbers_land"
			android:text="."/>

		<Button
			android:id="@+id/equal"
			style="@style/button_equal_land"
			android:text="="/>

	</LinearLayout>


</LinearLayout>